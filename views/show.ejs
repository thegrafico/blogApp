<% include ./partials/header%>


<div class="ui main text container segment">
	<div class="ui huge header"><%=blog.title%></div>	
		<div class="ui top attached">
			<div class="item">
				<img class="ui centered rounded image" src="<%=blog.image%>" alt="Blog image">
				<div class="content">
					<span><%=blog.Create.toDateString()%></span>	
				</div>
				<div class="description">
					<p><%=blog.body%></p>	
				</div>
				<!--Para editar Post del blog-->
				<a class="ui basic orange button" href="/blogs/<%=blog._id%>/edit">Edit</a>
				<!--SE USA EL METHOD DELETE PARA QUE FUNCTION EN APP.js-->
				<form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
					<button class="ui red basic button">Delete</button>
				</form>	
			</div>
		</div>
</div>


<% include ./partials/footer%>