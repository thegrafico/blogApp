<% include ./partials/header%>


<div class="ui main text container segment">
	<div class="ui huge header">New Blog</div>
		<!--Dentro de blog se va a enviar toda la info, como si fuera un array con tiitle, image and text-->
	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>Title</label>	
			<input type="text" name="blog[title]" placeholder="Title">
		</div>
		
		<div class="field">
			<label>Image</label>	
			<input type="text" name="blog[image]" placeholder="Link Image">
		</div>
			
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" cols="30" rows="10"></textarea>	
		</div>
		
		<input class="ui violet basic button big" type="submit">
				
	</form>
</div>


<% include ./partials/footer%>